﻿@Model List<Product>
@foreach (Product product in Model){
<li>
    <div class="shopping-cart-img">
        <a href="shop-product-right.html"><img alt="Nest" src="~/assets/imgs/shop/@product.ProductImages.FirstOrDefault(x=>x.IsFront==true).Image" /></a>
    </div>
    <div class="shopping-cart-title">
        <h4><a href="shop-product-right.html">@product.Name</a></h4>
        <h4><span>1 × </span>$@product.SellPrice</h4>
    </div>
    <div class="shopping-cart-delete">
        <a href="#"><i class="fi-rs-cross-small"></i></a>
    </div>
</li>}